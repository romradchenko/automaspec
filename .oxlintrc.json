{
    "$schema": "./node_modules/oxlint/configuration_schema.json",
    "env": {
        "browser": true
    },
    // TODO: enable type-aware when it's ready
    "plugins": [
        "eslint",
        "typescript",
        "unicorn",
        "oxc",

        "react",
        "react-perf",
        "nextjs",
        "import",
        "jsdoc",
        "jsx-a11y",
        "node",
        "promise",
        "jest",
        "vitest"
    ],
    "categories": {
        // "perf": "error",
        // "restriction": "error",
        // "suspicious": "error",
        // "pedantic": "warn",
        // "style": "warn"
    },
    "rules": {
        "eslint/no-undefined": "allow", // too strict
        "eslint-plugin-jest/no-conditional-in-test": "allow", // too strict

        "typescript/array-type": ["error", { "default": "array-simple" }],
    }
}