{
    "$schema": "./node_modules/oxlint/configuration_schema.json",
    "env": {
        "browser": true
    },
    // TODO: enable type-aware when it's ready
    "plugins": [
        "eslint",
        "typescript",
        "unicorn",
        "oxc",
        "react",
        "react-perf",
        "nextjs",
        "import",
        "jsdoc",
        "jsx-a11y",
        "node",
        "promise",
        "jest",
        "vitest"
    ],
    "categories": {
        // "perf": "warn",
        "restriction": "error",
        // "suspicious": "error",
        // "pedantic": "warn",
        // "style": "warn"
    },
    "rules": {
        "eslint/no-undefined": "allow", // too strict
        "eslint/no-plusplus": "allow", // too strict
        "eslint-plugin-jest/no-conditional-in-test": "allow", // too strict
        "eslint-plugin-jest/require-to-throw-message": "allow", // allow toThrow() without message for generic error tests
        "oxc/no-async-await": "allow", // this is stupid
        "oxc/no-rest-spread-properties": "allow", // this is stupid
        "oxc/no-optional-chaining": "allow", // this is stupid
        "node/no-process-env": "allow", // not applicable for nextjs

        "react/jsx-filename-extension": ["error", { "extensions": [".tsx"] }],
        "eslint/no-console": ["error", { "allow": ["error"] }],
        "typescript/array-type": [
            "error",
            {
                "default": "array-simple"
            }
        ],
        "typescript/explicit-module-boundary-types": "allow", // too strict for now
        "import/no-default-export": "allow", // not for nextjs
        "typescript/explicit-function-return-type": [
            "error",
            {
                "allowExpressions": true,
                "allowFunctionsWithoutTypeParameters": true
            }
        ],
    }
}